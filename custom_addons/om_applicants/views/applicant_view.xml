<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="custom_applicant_form" model="ir.ui.view">
        <field name="name">hr.applicant.form</field>
        <field name="model">hr.applicant</field>
        <field name="inherit_id" ref="hr_recruitment.hr_applicant_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="placeholder">Directeur Marketing</attribute>
            </xpath>

            <xpath expr="//field[@name='partner_name']" position="attributes">
                <attribute name="placeholder">John MANSA</attribute>
            </xpath>

            <xpath expr="//field[@name='email_from']" position="attributes">
                <attribute name="placeholder">johnmansa@korv-consulting.fr</attribute>
            </xpath>

            <xpath expr="//field[@name='email_cc']" position="attributes">
                <attribute name="modifiers">{'invisible': True}</attribute>
            </xpath>

            <xpath expr="//field[@name='linkedin_profile']" position="attributes">
                <attribute name="modifiers">{'invisible': True}</attribute>
            </xpath>

            <xpath expr="//field[@name='user_id']" position="attributes">
                <attribute name="modifiers">{'invisible': True}</attribute>
            </xpath>

            <xpath expr="//field[@name='source_id']" position="attributes">
                <attribute name="modifiers">{'invisible': True}</attribute>
            </xpath>

            <xpath expr="//field[@name='medium_id']" position="attributes">
                <attribute name="modifiers">{'invisible': True}</attribute>
            </xpath>

            <xpath expr="//field[@name='availability']" position="attributes">
                <attribute name="string">Date de d√©but</attribute>
            </xpath>

        </field>
    </record>

    <record id="custom_applicant" model="ir.ui.view">
        <field name="name">model.name.view.tree</field>
        <field name="model">hr.applicant</field>
        <field name="inherit_id" ref="hr_recruitment.crm_case_tree_view_job"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>
